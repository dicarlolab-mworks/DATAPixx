%include 'includes/WordOutputBitInput.inc'


datapixx datapixx (
    update_interval = 3ms
    enable_dout_din_loopback = true
    ) {
    datapixx_word_output (
        bit_numbers = 12, 7:9
        value = word
        )
    datapixx_bit_input (
        bit_number = 12
        value = bit0
        )
    datapixx_bit_input (
        bit_number = 7
        value = bit1
        )
    datapixx_bit_input (
        bit_number = 8
        value = bit2
        )
    datapixx_bit_input (
        bit_number = 9
        value = bit3
        )
}
